---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.jsx";
import Footer from "../components/Footer.jsx";
import Skill from "../components/Skill.jsx";

import icGithub from "../content/svgs/github.svg";
import icTwitter from "../content/svgs/twitter.svg";
import icArrowDown from "../content/svgs/arrow-down.svg";

import icAstro from "../content/icons/astro.webp";
import icCSS from "../content/icons/css.webp";
import icHTML from "../content/icons/html.webp";
import icJS from "../content/icons/js.webp";
import icReact from "../content/icons/react.webp";
import icSass from "../content/icons/sass.webp";
import icTailwind from "../content/svgs/tailwind.svg";

import icFLStudio from "../content/icons/fl-studio.webp";
import icGamemaker from "../content/icons/gamemaker.webp";
import icClipStudio from "../content/icons/clip-studio.webp";
import icAseprite from "../content/icons/aseprite.webp";
import icBlender from "../content/icons/blender.webp";

import svgExternalLink from "../content/svgs/external-link.svg";
---

<Layout title="Home - QuevDev">
  <Navbar client:load activeLink="home" />
  <main class="md:text-xl">
    <header
      class="banner shadow-xl text-cBackground p-12 min-h-screen mt-32 relative bottom-24 flex flex-col items-center justify-center"
    >
      <div
        data-aos="fade-right"
        data-aos-once="true"
        data-aos-duration="500"
        class="my-6"
      >
        <h1 class="text-6xl md:text-8xl font-bold mb-4">QuevDev</h1>
        <h2 class="text-2xl md:text-4xl font-bold">Front-End Developer</h2>
        <p class="text-xl md:text-2xl">
          Working to create tools with engaging UI and UX.
        </p>
      </div>
      <div
        data-aos="fade-right"
        data-aos-once="true"
        data-aos-delay="300"
        data-aos-duration="500"
        class="flex flex-wrap items-center justify-center gap-4 bg-mid rounded-lg p-4 text-cAccent shadow-sm shadow-cAccent"
      >
        <a
          class="flex flex-row gap-2"
          rel="noreferrer"
          target="_blank"
          href="https://twitter.com/quevdev"
        >
          <img class="inline w-6 h-6" src={icTwitter} alt="" />
          Twitter
        </a>
        <a
          class="flex flex-row gap-2"
          rel="noreferrer"
          target="_blank"
          href="https://github.com/quev-dev/"
        >
          <img class="inline w-6 h-6" src={icGithub} alt="" />
          GitHub
        </a>
      </div>
      <div
        data-aos="fade-right"
        data-aos-duration="500"
        data-aos-delay="600"
        data-aos-once="true"
        class="mt-4 flex flex-col items-center justify-center"
      >
        <p class="text-center w-3/4 m-auto mb-1">
          Scroll down to learn more about me and what I create.
        </p>
        <button name="Scroll Button">
          <img
            id="scroll-btn"
            src={icArrowDown}
            class="w-8 h-8 drop-shadow-xl"
            alt=""
          />
        </button>
      </div>
    </header>
    <div
      id="scroll-target"
      class="flex flex-col gap-12 m-8 md:gap-16 lg:gap-24 md:w-1/2 md:m-auto"
    >
      <section class="flex flex-col gap-2 md:gap-4">
        <h3
          data-aos="fade-right"
          data-aos-once="true"
          data-aos-duration="500"
          class="text-4xl font-bold"
        >
          About Me üìÑ
        </h3>
        <article
          data-aos="fade-right"
          data-aos-once="true"
          data-aos-duration="500"
        >
          <p>
            I'm a front-end developer, working to create unique and responsive
            web applications.
          </p>
          <p>
            Away from web development, I work on small side projects consisting
            of game development, music composition, and artwork.
          </p>
        </article>
      </section>
      <section class="flex flex-col gap-2 md:gap-4">
        <h3
          data-aos="fade-right"
          data-aos-once="true"
          data-aos-duration="500"
          class="text-4xl font-bold"
        >
          Skills üóíÔ∏è
        </h3>
        <p data-aos="fade-right" data-aos-once="true" data-aos-duration="500">
          Here are some of the technologies I've worked with the most to build
          web applications.
        </p>
        <ul
          data-aos="fade-left"
          data-aos-once="true"
          data-aos-duration="500"
          class="grid grid-cols-2 gap-4 bg-mid p-4 mb-6 rounded-lg shadow-xl"
        >
          <Skill text="HTML" image={icHTML} link="https://html.com/" />
          <Skill text="CSS" image={icCSS} link="https://www.css3.com/" />
          <Skill text="Sass" image={icSass} link="https://sass-lang.com/" />
          <Skill
            text="JavaScript"
            image={icJS}
            link="https://www.javascript.com/"
          />
          <Skill text="React" image={icReact} link="https://react.dev/" />
          <Skill text="Astro" image={icAstro} link="https://astro.build/" />
          <Skill
            text="Tailwind"
            image={icTailwind}
            link="https://tailwindcss.com/"
          />
        </ul>
        <p data-aos="fade-right" data-aos-once="true" data-aos-duration="500">
