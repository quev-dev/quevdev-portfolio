          </li>
        </ul>
      </section>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  const scrollButton = document.querySelector("#scroll-btn");
  const targetScrollElement = document.querySelector("#scroll-target");

  scrollButton.addEventListener("click", () => {
    const targetElementRect = targetScrollElement.getBoundingClientRect();
    const bufferDistance = 200;
    const currentScrollPosition =
      window.pageYOffset || document.documentElement.scrollTop;
    const targetScrollPosition =
      targetElementRect.top + currentScrollPosition - bufferDistance;

    window.scrollBy({ top: targetScrollPosition, behavior: "smooth" });
  });
</script>
